<?php
class my_oxarticle extends my_oxarticle_parent
{
    public function getMySaving()
    {
        $dArticleOldPrice = $this->getTPrice()->getBruttoPrice();
        if($dArticleOldPrice > 0)
        {
            $dArticlePrice = $this->getPrice()->getBruttoPrice();
            $dArticleProcent = $dArticlePrice / 100;
            $dArticleDifference = $dArticleOldPrice - $dArticlePrice;
            $dArticleSaving = 100 - ($dArticlePrice * 100 / $dArticleOldPrice);
            $dArticleSaving = number_format($dArticleSaving, 0, "", "");
            if($dArticleSaving > 0)
            {
                return $dArticleSaving;
            }
        }
        return;
    }
}
?>
